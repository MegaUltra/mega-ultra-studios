---
import HeaderLink from './HeaderLink.astro';
import logo from '../assets/logo.svg'
import { SITE_TITLE } from '../consts';

export interface Props {
	bgImage?: string;
}

const { bgImage = '/splash.jpg' } = Astro.props;
---

<header>
	<div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
		<a href="/" class="flex title-font font-medium items-center text-white mb-4 md:mb-0"><img class="mx-3 w-48" src={logo} alt="Mega Ultra Studios logo" /></a>
	<nav class="md:ml-auto md:mr-auto flex flex-wrap items-center text-base justify-center">
		
		<HeaderLink href="/">Home</HeaderLink>
		<HeaderLink href="/blog">Blorg</HeaderLink>
		<HeaderLink href="/projects">Projects</HeaderLink>
		<HeaderLink href="/about">About</HeaderLink>
		<HeaderLink href="https://twitter.com/astrodotbuild" target="_blank">Twitter</HeaderLink>
		<HeaderLink href="https://github.com/withastro/astro" target="_blank">GitHub</HeaderLink>
	</nav>
</div>
</header>
