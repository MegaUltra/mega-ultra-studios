---
import HeaderLink from './HeaderLink.astro';
import logo from '../assets/logo.svg'
import { Astronav, MenuItems, MenuIcon,  Dropdown, DropdownItems } from "astro-navbar";
import { SITE_TITLE } from '../consts';

export interface Props {
	bgImage?: string;
}

const { bgImage = '/splash.jpg' } = Astro.props;
---

<header class="lg:flex p-5  gap-5">
	<Astronav>
	<div class="flex w-full justify-between">
		<a href="/"><img class="mx-3 w-48" src={logo} alt="Mega Ultra Studios logo" /></a>
	<div class="block lg:hidden">
		<MenuIcon class="w-4 h-4 text-white" />
		</div>
	</div>
		<MenuItems class="hidden lg:flex">
			<ul class="flex flex-col lg:flex-row lg:gap-5">
		<HeaderLink href="/blog">Blorg</HeaderLink>
		<HeaderLink href="/projects">Projects</HeaderLink>
		<HeaderLink href="/about">About</HeaderLink>
		<HeaderLink href="https://twitter.com/astrodotbuild" target="_blank">Twitter</HeaderLink>
		<HeaderLink href="https://github.com/withastro/astro" target="_blank">GitHub</HeaderLink>
		<li>
			<Dropdown class="group">
			  <button class="flex items-center">
				<span> Services </span>
				<svg 
				  xmlns="http://www.w3.org/2000/svg"
				  fill="none"
				  viewBox="0 0 24 24"
				  stroke-width="3"
				  stroke="currentColor"
				  class="w-3 h-3 mt-0.5 mx-1 group-open:rotate-180">
				  <path
					stroke-linecap="round"
					stroke-linejoin="round"
					d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
				</svg>
			  </button>
			  <DropdownItems class="relative">
				<div class="absolute top-0">
				  <ul>
					<li>Menu 1</li>
					<li>Menu 2</li>
					<li>Menu 3</li>
				  </ul>
				</div>
			  </DropdownItems>
			</Dropdown>
		  </li>
		</ul>
		</MenuItems>
	</Astronav>
</header>
