---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead />
	</head>

	<body class="bg-[#1e2040] text-white">
		<div class="h-full">
		<Header />
		<main class="grid place-items-center h-[75vh] content-center">
			<h1 class="font-['MinstrelPoster2'] text-2xl">{title}</h1>
			<h2>{description}</h2>
		<slot />
		</main>
		<Footer />
	</div>
	</body>
</html>
